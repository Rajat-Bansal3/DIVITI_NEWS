{
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "NodeNext",
    "allowJs": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": ".",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,

    "lib": ["ES2022"],

    "resolveJsonModule": true,
    "typeRoots": ["src/types/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
